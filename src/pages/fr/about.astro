<style>
  .about {
    display: flex;
    flex-direction: column;
    gap: 3.5rem;
  }

  img {
    margin-top: 1.5rem;
    border-radius: 1.5rem;
    box-shadow: var(--shadow-md);
  }

  section {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    color: var(--gray-200);
  }

  .section-title {
    grid-column-start: 1;
    font-size: var(--text-xl);
    color: var(--gray-0);
  }

  .content {
    grid-column: 2 / 4;
  }

  .content > .background {
    padding-bottom: 2rem;
  }

  .content :global(a) {
    text-decoration: 1px solid underline transparent;
    text-underline-offset: 0.25em;
    transition: text-decoration-color var(--theme-transition);
  }

  .content :global(a:hover),
  .content :global(a:focus) {
    text-decoration-color: currentColor;
  }

  .content-logo {
    display: flex;
    flex-wrap: wrap;
    gap: 1.2em;
    text-align: center;
  }

  .soft-skills {
    display: flex;
    gap: 3em;
  }

  h3 {
    margin-bottom: 0.5em;
    font-size: var(--text-lg);
  }

  .cv {
    display: flex;
    flex-direction: column;
    gap: 1em;
    max-width: 80%;
    margin: 25px auto 0;
  }

  .cv-btn {
    height: fit-content;
    font-size: var(--text-xl);
    font-weight: 600;

    text-align: center;
    color: var(--accent-text-over);
    text-decoration: none;
    border-radius: 999rem;
    background: var(--gradient-accent-orange);
  }

  .cv-img {
    margin-top: 0;
    width: 100%;
  }

  .cv-btn::after {
    content: "";
    position: absolute;
    inset: 0;
    pointer-events: none;
    transition: background-color var(--theme-transition);
    mix-blend-mode: overlay;
  }

  @media (min-width: 20em) {
    .cv-btn {
      font-size: var(--text-lg);
    }
  }

  @media (min-width: 50em) {
    .about {
      display: grid;
      grid-template-columns: 1fr 60% 1fr;
    }

    .about > :global(:first-child) {
      grid-column-start: 2;
    }

    section {
      display: contents;
      font-size: var(--text-lg);
    }
  }
</style>
