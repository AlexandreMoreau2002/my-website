---
const currentLocale = Astro.currentLocale;
---
<script is:inline>	
	function toggleLang() {
		const currentUrl = window.location.pathname;
		const targetLang = currentUrl.startsWith('/en') ? 'fr' : 'en';
		const newUrl = currentUrl.replace(/\/(fr|en)\//g, `/${targetLang}/`);
		const fullUrl = newUrl + window.location.search + window.location.hash;
		window.location.href = fullUrl;
	}
</script>

<lang-toggle>
  <button onclick="toggleLang()">
    <span class={`icon fr ${currentLocale === 'fr' ? 'active' : ''}`}>Fr</span>
	<span class={`icon en ${currentLocale === 'en' ? 'active' : ''}`}>En</span>
  </button>
</lang-toggle>

<style>
	button {
		display: flex;
		border: 0;
		border-radius: 999rem;
		padding: 0;
		background-color: var(--gray-999);
		box-shadow: inset 0 0 0 1px var(--accent-overlay);
		cursor: pointer;
		transition: background-color 0.3s ease, opacity 0.3s ease;
	}

	.icon {
		font-family: var(--font-brand);
		color: var(--accent-overlay);
		font-size: 0.9rem;
		font-weight: 500;
		position: relative;
		display: flex;
		padding: 0.5rem;
		width: 2rem;
		height: 2rem;
		z-index: 1;
	}

    .icon.en {
        margin-left: -0.1;
    }

	.icon.active::before {
		content: '';
		z-index: -1;
		position: absolute;
		inset: 0;
		background-color: var(--accent-regular);
		border-radius: 999rem;
		transition: transform 0.3s ease, background-color 0.3s ease;
	}
	
	.icon.active {
		color: var(--accent-text-over);
	}

	.icon:not(.active) {
		color: var(--accent-overlay);
	}

	:global(html:not(.theme-dark)) .icon:not(.active) {
		color: var(--accent-regular);
	}

	@media (prefers-reduced-motion: no-preference) {
		.icon,
		.icon.active::before {
			transition:
				transform var(--theme-transition),
				color var(--theme-transition);
		}
	}

	@media (forced-colors: active) {
		.icon.active::before {
			background-color: SelectedItem;
		}
	}
</style>